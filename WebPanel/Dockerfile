FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 8080

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["analyse-image-panel/analyse-image-panel.csproj", "analyse-image-panel/"]
RUN dotnet restore "./analyse-image-panel/analyse-image-panel.csproj"
COPY . .
WORKDIR "/src/analyse-image-panel"
RUN dotnet build "./analyse-image-panel.csproj" -c $BUILD_CONFIGURATION -o /app/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "./analyse-image-panel.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "analyse-image-panel.dll"]
